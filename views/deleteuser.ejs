<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-md-12">
            <% if (message) { %>
                <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (users != ' ' ) { %>
                    <table class="table table-striped text-center my-5">
                        <thead>
                            <tr class="table-light">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Gender</th>
                                <th>Designation</th>
                                <th>Course</th>
                                <th>Date Created</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <img src="/uploads/<%= row.image %>" width="50" class="img-thumbnail">
                                    </td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td><%= row.gender %></td>
                                    <td><%= row.desgination %></td>
                                    <td><%= row.course %></td>
                                    <td><%= row.datecreated.toDateString() %></td> <!-- Added toDateString() to format date -->
                                    <td>
                                        <td>
                                            <a href="/edit/<%= row._id %>" class="btn btn-primary">Edit</a>
                                            <a href="/delete/<%= row._id %>" class="btn btn-danger">Delete</a>
                                        </td>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No user found</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>


<%- include('layout/footer') %>
